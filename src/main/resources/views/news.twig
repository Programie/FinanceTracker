{% if news %}
    <div class="list-group">
        {% for item in news %}
            <a href="{{ item.url }}" target="_blank" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <small title="{{ item.date.format("d.m.Y H:i") }}">{{ item.date.formatRelativeTime() }}</small>
                </div>
                <p class="mb-1">{{ item.title }}</p>
            </a>
        {% endfor %}
    </div>
{% else %}
    <div class="alert alert-warning" role="alert">No news available.</div>
{% endif %}